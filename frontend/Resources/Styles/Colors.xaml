<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Brand palette requested by client - Bananera Santa Cecilia -->
    <Color x:Key="BrandSkyBlue">#9BC7B3</Color>
    <Color x:Key="BrandSkyBlueDark">#7FAE99</Color>
    <Color x:Key="BrandPastelGreen">#B6DDF2</Color>
    <Color x:Key="BoneWhite">#F6F5F0</Color>

    <!-- Text colors - Semantic -->
    <Color x:Key="TextPrimary">#2f3e3a</Color>
    <Color x:Key="TextSecondary">#6b7f78</Color>
    <Color x:Key="TextTertiary">#9fb2ab</Color>
    <Color x:Key="Border">#d8ded9</Color>
    <Color x:Key="BorderLight">#e6ebe7</Color>

    <!-- Functional states -->
    <Color x:Key="Success">#8ecfae</Color>
    <Color x:Key="SuccessDark">#6fb894</Color>
    <Color x:Key="Warning">#f2d28b</Color>
    <Color x:Key="WarningDark">#d6b45e</Color>
    <Color x:Key="Danger">#e7a3a3</Color>
    <Color x:Key="DangerDark">#c98686</Color>

    <!-- Surface colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffBlack">#0B0B0B</Color>
    <Color x:Key="SurfaceSecondary">#EFEDEA</Color>
    <Color x:Key="AccentGreen">#cfe8dd</Color>
    <Color x:Key="AccentBlue">#e3f3fb</Color>
    <Color x:Key="AccentNeutral">#f5f4ef</Color>

    <!-- Grayscale -->
    <Color x:Key="Gray100">#EDEDED</Color>
    <Color x:Key="Gray200">#D1D5DB</Color>
    <Color x:Key="Gray300">#9CA3AF</Color>
    <Color x:Key="Gray400">#6B7280</Color>
    <Color x:Key="Gray500">#4B5563</Color>
    <Color x:Key="Gray600">#374151</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>

    <!-- Aliases for components -->
    <Color x:Key="Primary">#9BC7B3</Color>
    <Color x:Key="PrimaryDark">#7FAE99</Color>
    <Color x:Key="Secondary">#B6DDF2</Color>
    <Color x:Key="PrimaryDarkText">White</Color>
    <Color x:Key="MidnightBlue">#002147</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource BrandSkyBlue}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource BrandSkyBlueDark}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource BrandPastelGreen}"/>
    <SolidColorBrush x:Key="OffBlackBrush" Color="{StaticResource OffBlack}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource BoneWhite}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiary}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
</ResourceDictionary>