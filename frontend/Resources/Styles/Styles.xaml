<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource BoneWhite}" />
    <SolidColorBrush x:Key="BrandSoftBrush" Color="{StaticResource AccentBlue}" />

    <!-- GENERAL STYLES -->
    <Style TargetType="Page">
        <Setter Property="BackgroundColor" Value="{StaticResource BoneWhite}" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackground" Value="{StaticResource BrandSkyBlue}" />
        <Setter Property="BarTextColor" Value="White" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <!-- LABEL STYLES -->
    <Style TargetType="Label" x:Key="Heading1">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Label" x:Key="Heading2">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Label" x:Key="Heading3">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Label" x:Key="Body">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Label" x:Key="BodySecondary">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style TargetType="Label" x:Key="Caption">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <Style TargetType="Label" x:Key="CaptionSecondary">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <!-- BUTTON STYLES -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Background" Value="{StaticResource BrandSkyBlue}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="Background" Value="{StaticResource BrandPastelGreen}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button" x:Key="DangerButton">
        <Setter Property="Background" Value="{StaticResource Danger}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button" x:Key="OutlineButton">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource BrandSkyBlue}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderColor" Value="{StaticResource BrandSkyBlue}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!-- ENTRY STYLES -->
    <Style TargetType="Entry" x:Key="StandardEntry">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
    </Style>

    <!-- BORDER STYLES (formerly Frame) -->
    <Style TargetType="Border" x:Key="CardFrame">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 0,0,0,0" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style TargetType="Border" x:Key="CardFrameElevated">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 0,0,0,0" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style TargetType="Border" x:Key="LoginCard">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 0,0,0,0" />
        <Setter Property="Padding" Value="0" />
    </Style>

</ResourceDictionary>
