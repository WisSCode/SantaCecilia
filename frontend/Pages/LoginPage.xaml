<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="frontend.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F7F7F3">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Border
            WidthRequest="360"
            Stroke="#D6DAD7"
            StrokeThickness="1"
            BackgroundColor="White">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="0">

                <!-- ENCABEZADO -->
                <Grid BackgroundColor="#9EC9B4" Padding="24">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">

                        <Image
                            Source="logo_santa_cecilia.png"
                            HeightRequest="64"
                            WidthRequest="64"
                            Aspect="AspectFit" />

                        <Label
                            Text="FINCA BANANERA SANTA CECILIA"
                            FontSize="14"
                            FontAttributes="Bold"
                            TextColor="White"
                            HorizontalTextAlignment="Center" />

                        <Label
                            Text="Sistema de Gestión de Nómina"
                            FontSize="11"
                            TextColor="#F2F7F4"
                            HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                </Grid>

                <!-- FORMULARIO -->
                <VerticalStackLayout Padding="24" Spacing="16">

                    <Label
                        Text="Iniciar Sesión"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="#2E3A34" />

                    <!-- EMAIL -->
                    <VerticalStackLayout Spacing="6">
                        <Label
                            Text="Correo"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="#2E3A34" />

                        <Entry
                            Placeholder="Ingrese su correo"
                            Keyboard="Email"
                            Text="{Binding Email}"
                            FontSize="13"
                            TextColor="#2E3A34"
                            BackgroundColor="White" />
                    </VerticalStackLayout>

                    <!-- PASSWORD -->
                    <VerticalStackLayout Spacing="6">
                        <Label
                            Text="Contraseña"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="#2E3A34" />

                        <Entry
                            Placeholder="Ingrese su contraseña"
                            IsPassword="True"
                            Text="{Binding Password}"
                            FontSize="13"
                            TextColor="#2E3A34"
                            BackgroundColor="White" />
                    </VerticalStackLayout>

                    <!-- BOTÓN INGRESAR -->
                    <Button
                        Text="Ingresar"
                        HeightRequest="44"
                        BackgroundColor="#9EC9B4"
                        TextColor="White"
                        FontAttributes="Bold"
                        Clicked="OnLoginClicked"
                        IsEnabled="True"/>

                    <!-- BOTÓN REGISTRARSE -->
                    <Button
                        Text="Registrarse"
                        HeightRequest="44"
                        BackgroundColor="Transparent"
                        TextColor="#2E3A34"
                        FontAttributes="Bold"
                        BorderColor="#9EC9B4"
                        BorderWidth="1"
                        Clicked="OnRegisterClicked" />

                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>