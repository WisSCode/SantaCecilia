<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.UsersPage"
             Title=""
             Padding="0">

    <Grid RowDefinitions="*" ColumnDefinitions="*" Background="{StaticResource AppBackgroundBrush}">
        <ScrollView Grid.Row="0" Grid.Column="0">
            <VerticalStackLayout Padding="20" Spacing="16">
                
                <!-- Header -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Usuarios" Style="{StaticResource Heading2}" />
                    <Label Text="GestiÃ³n de accesos y roles" Style="{StaticResource BodySecondary}" />
                </VerticalStackLayout>

                <!-- Summary Stats -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Border Grid.Column="0" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="6">
                            <Border BackgroundColor="{StaticResource SurfaceSecondary}" Padding="6" StrokeShape="RoundRectangle 0,0,0,0">
                                <Label Text="ðŸ‘¤" FontSize="16" />
                            </Border>
                            <Label x:Name="TotalUsersLabel" Text="0" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                            <Label Text="Total Usuarios" Style="{StaticResource Caption}" TextColor="{StaticResource TextSecondary}" />
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="1" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout Spacing="6">
                            <Border BackgroundColor="{StaticResource SurfaceSecondary}" Padding="6" StrokeShape="RoundRectangle 0,0,0,0">
                                <Label Text="âœ“" FontSize="16" />
                            </Border>
                            <Label x:Name="ValidatedUsersLabel" Text="0" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                            <Label Text="Validados" Style="{StaticResource Caption}" TextColor="{StaticResource TextSecondary}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Actions -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Border Grid.Column="0" Style="{StaticResource CardFrame}" Padding="10">
                        <Entry x:Name="SearchEntry" Placeholder="Buscar usuario..." />
                    </Border>
                    <Button Grid.Column="1" Text="+ Agregar" Style="{StaticResource PrimaryButton}" Clicked="OnAddClicked" />
                </Grid>

                <!-- Users List -->
                <Border Style="{StaticResource CardFrame}" Padding="0">
                    <VerticalStackLayout Spacing="0">
                        <Grid Padding="14" ColumnDefinitions="*,Auto">
                            <Label Text="Listado de Usuarios" FontSize="15" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" />
                        </Grid>

                        <Grid Padding="10" ColumnDefinitions="2*,1.5*,1*,Auto" BackgroundColor="{StaticResource SurfaceSecondary}">
                            <Label Text="EMAIL" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource TextSecondary}" />
                            <Label Grid.Column="1" Text="ROL" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource TextSecondary}" />
                            <Label Grid.Column="2" Text="ESTADO" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource TextSecondary}" />
                            <Label Grid.Column="3" Text="ACCIONES" FontSize="10" FontAttributes="Bold" TextColor="{StaticResource TextSecondary}" />
                        </Grid>

                        <CollectionView x:Name="UsersList" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Stroke="{StaticResource Border}" StrokeThickness="1" Padding="10">
                                        <Grid ColumnDefinitions="2*,1.5*,1*,Auto" ColumnSpacing="8" RowDefinitions="Auto,Auto">
                                            <Label Text="{Binding Mail}" FontAttributes="Bold" FontSize="11" TextColor="{StaticResource TextPrimary}" VerticalOptions="Center" />
                                            <Label Grid.Column="1" Text="{Binding Role}" FontSize="11" TextColor="{StaticResource TextSecondary}" VerticalOptions="Center" />
                                            <Border Grid.Column="2" 
                                                    BackgroundColor="{Binding StatusColor}" 
                                                    Padding="6,3" 
                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Center">
                                                <Label Text="{Binding StatusText}" FontSize="10" TextColor="White" FontAttributes="Bold" />
                                            </Border>
                                            <HorizontalStackLayout Grid.Column="3" Spacing="6">
                                                <Button Text="Validar" 
                                                        IsVisible="{Binding NeedsValidation}"
                                                        Clicked="OnValidateClicked"
                                                        CommandParameter="{Binding .}"
                                                        Style="{StaticResource PrimaryButton}"
                                                        FontSize="10"
                                                        Padding="8,4"
                                                        MinimumHeightRequest="28" />
                                                <Button Text="Editar" 
                                                        Clicked="OnEditClicked"
                                                        CommandParameter="{Binding .}"
                                                        Style="{StaticResource OutlineButton}"
                                                        FontSize="10"
                                                        Padding="8,4"
                                                        MinimumHeightRequest="28" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
