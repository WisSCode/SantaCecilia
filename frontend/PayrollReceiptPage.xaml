<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.PayrollReceiptPage"
             Title=""
             Padding="0"
             Shell.NavBarIsVisible="False">

    <Grid Padding="0" Background="{StaticResource AppBackgroundBrush}" RowDefinitions="Auto,*">
        <Grid Padding="16,14" BackgroundColor="{StaticResource BrandSkyBlue}" ColumnDefinitions="*,Auto">
            <VerticalStackLayout Spacing="2">
                <Label Text="Detalle de Boleta de Pago" FontSize="14" FontAttributes="Bold" TextColor="White" />
                <Label Text="Resumen semanal" FontSize="11" TextColor="White" />
            </VerticalStackLayout>
            <Button Grid.Column="1"
                    Text="Cerrar"
                    Clicked="OnCloseClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="12"
                    Padding="8,4" />
        </Grid>
        <Border Grid.Row="1" Style="{StaticResource CardFrame}" Margin="16" Padding="0">
            <WebView x:Name="ReceiptWebView" />
        </Border>
    </Grid>

</ContentPage>
